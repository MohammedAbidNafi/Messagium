<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.margsapp.messageium">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name="com.margsapp.messageium.utils.FirebaseOffline"
        android:allowBackup="true"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_appicon"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_appicon_round"
        android:showOnLockScreen="true"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.Messenger"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name="com.margsapp.messageium.Settings.Wallpaper"
            android:exported="true" />
        <activity
            android:name="com.margsapp.messageium.Main.SendMediaActivity"
            android:exported="true" />
        <activity
            android:name="com.margsapp.messageium.Settings.setWallpaper"
            android:exported="true" />

        <receiver android:name="com.margsapp.messageium.Widgets.UnreadMessagesWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/unread_messages_widget_info" />
        </receiver>

        <activity
            android:name="com.margsapp.messageium.Welcome.MyWelcomeActivity"
            android:theme="@style/WelcomeScreenTheme.SolidNavigation" />
        <activity android:name="com.margsapp.messageium.ImageView.chat_image_viewActivity" />
        <activity
            android:name="com.margsapp.messageium.Main.SendImageActivity"
            android:theme="@style/Theme.Messenger.SendImage" />
        <activity android:name="com.margsapp.messageium.Authentication.google_setupActivity" />
        <activity android:name="com.margsapp.messageium.ImageView.main_dpActivity" />
        <activity android:name="com.margsapp.messageium.ImageView.personal_dpActivity" />
        <activity android:name="com.margsapp.messageium.groupclass.manage_partActivty" />
        <activity android:name="com.margsapp.messageium.groupclass.edit_group_name" />
        <activity android:name="com.margsapp.messageium.Authentication.Phone_setupActivity" />
        <activity android:name="com.margsapp.messageium.Authentication.VerifyOTP" />
        <activity android:name="com.margsapp.messageium.Authentication.PhoneAuthActivity" />
        <activity
            android:name="com.margsapp.messageium.groupclass.group_infoActivity"
            android:theme="@style/Theme.Messenger.Message" />
        <activity
            android:name="com.margsapp.messageium.groupclass.group_messageActivity"
            android:theme="@style/Theme.Messenger.Message" />
        <activity android:name="com.margsapp.messageium.groupclass.AddParticipants" />
        <activity android:name="com.margsapp.messageium.groupclass.create_groupActivity" />
        <activity android:name="com.margsapp.messageium.Settings.ChatViewActivity" />
        <activity android:name="com.margsapp.messageium.AppDetails.privacyActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.Messenger.Crop" />
        <activity
            android:name="com.margsapp.messageium.Authentication.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity android:name="com.margsapp.messageium.Settings.AboutActivity" />
        <activity
            android:name="com.margsapp.messageium.Settings.CustomiseActivity"
           />
        <activity android:name="com.margsapp.messageium.ImageView.group_dpActivity" />
        <activity android:name="com.margsapp.messageium.Friends.Blocked" />
        <activity android:name="com.margsapp.messageium.Friends.Accepted" />
        <activity android:name="com.margsapp.messageium.Settings.EditStatusActivity" />
        <activity android:name="com.margsapp.messageium.Main.FindUsersActivity" />
        <activity android:name="com.margsapp.messageium.AppDetails.Terms_ConditionsActivity" />
        <activity android:name="com.margsapp.messageium.Settings.edit_profile" />
        <activity android:name="com.margsapp.messageium.Settings.Chat_settings" />
        <activity
            android:name="com.margsapp.messageium.Main.MessageActivity"
            android:theme="@style/Theme.Messenger.Message" />
        <activity
            android:name="com.margsapp.messageium.Main.MainActivity"
            android:theme="@style/Theme.Messenger.Mainmenu" />
        <activity
            android:name="com.margsapp.messageium.Authentication.StartActivity"
            android:theme="@style/Loader" />
        <activity
            android:name="com.margsapp.messageium.VideoCall.CallActivity"
            android:theme="@style/Theme.Messenger.Fullscreen" />

        <service
            android:name="com.margsapp.messageium.Notifications.MyFirebaseIdService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.margsapp.messageium.Notifications.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5615682506938042~4256769585" />
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>